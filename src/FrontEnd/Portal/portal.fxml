<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<!--
    There will be 3 panes to represent different layers of progress.
    More detailed documentation in the Controller file.

    First layer is selecting the train
    Second is seat position selection
    Third is payment

    At all times settings tab will be available to open.
    Settings tab will include Address information, password change and billing info
    
-->

<AnchorPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FrontEnd.Portal.PortalController">
   <children>
      <Pane AnchorPane.bottomAnchor="700.0" AnchorPane.topAnchor="0.0">
         <children>
            <AnchorPane opacity="0.5" prefHeight="68.0" prefWidth="1024.0" style="-fx-background-color: lawngreen;">
               <children>
                  <Button fx:id="settingsButton" layoutX="958.0" layoutY="21.0" mnemonicParsing="false" onAction="#toggleSettings" AnchorPane.topAnchor="15.0" />
               </children></AnchorPane>
         </children></Pane>
      <AnchorPane fx:id="settingsAnchorPane" prefHeight="700.0" prefWidth="400.0" style="-fx-background-color: gainsboro;" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="68.0">
         <children>
            <Label layoutX="14.0" layoutY="14.0" text="User settings">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
         </children></AnchorPane>
   </children>
</AnchorPane>
